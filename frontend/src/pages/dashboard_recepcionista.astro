<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard Recepcionista - Veterinaria Pochita</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          "Helvetica Neue", Arial, sans-serif;
        background-color: #1a1a1a;
        background-image: url('/pochita-pattern.jpeg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        min-height: 100vh;
        color: #ffffff;
      }

      body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(26, 26, 26, 0.9);
        z-index: -1;
      }

      header {
        background: rgba(45, 45, 45, 0.95);
        padding: 1.5rem 2rem;
        border-bottom: 2px solid rgba(243, 156, 18, 0.3);
        position: sticky;
        top: 0;
        z-index: 100;
        backdrop-filter: blur(10px);
      }

      .header-content {
        max-width: 1400px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .header-content h1 {
        margin: 0;
        color: #f39c12;
        font-size: 1.8rem;
        text-shadow: 0 2px 10px rgba(243, 156, 18, 0.3);
      }

      .brand-link {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        text-decoration: none;
        color: inherit;
      }

      .logo-img-small {
        height: 1.8rem;
        width: auto;
        display: block;
      }

      .header-actions {
        display: flex;
        align-items: center;
        gap: 1.5rem;
      }

      .username {
        color: #d0d0d0;
        font-weight: 500;
        font-size: 1rem;
      }

      .btn-logout {
        background: rgba(231, 76, 60, 0.9);
        color: white;
        border: none;
        padding: 0.7rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.95rem;
      }

      .btn-logout:hover {
        background: rgba(231, 76, 60, 1);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(231, 76, 60, 0.4);
      }

      .container {
        max-width: 1400px;
        margin: 2rem auto;
        padding: 0 2rem;
      }

      .welcome {
        background: rgba(45, 45, 45, 0.95);
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        border: 1px solid rgba(243, 156, 18, 0.2);
      }

      .welcome h2 {
        color: #f39c12;
        margin-bottom: 0.5rem;
      }

      .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        margin-top: 2rem;
      }

      .section-header h2 {
        color: #f39c12;
        font-size: 1.5rem;
      }

      .btn-add {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
        color: white;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 1rem;
      }

      .btn-add:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(243, 156, 18, 0.4);
      }

      .table-container {
        background: rgba(45, 45, 45, 0.95);
        border-radius: 15px;
        overflow: hidden;
        border: 1px solid rgba(243, 156, 18, 0.2);
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      thead {
        background: rgba(243, 156, 18, 0.1);
      }

      th {
        padding: 1rem;
        text-align: left;
        color: #f39c12;
        font-weight: 600;
        border-bottom: 2px solid rgba(243, 156, 18, 0.3);
      }

      td {
        padding: 1rem;
        color: #d0d0d0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }

      tr:hover {
        background: rgba(243, 156, 18, 0.05);
      }

      .badge {
        display: inline-block;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
      }

      .badge-pendiente {
        background: rgba(241, 196, 15, 0.2);
        color: #f1c40f;
        border: 1px solid rgba(241, 196, 15, 0.5);
      }

      .badge-confirmada {
        background: rgba(46, 204, 113, 0.2);
        color: #2ecc71;
        border: 1px solid rgba(46, 204, 113, 0.5);
      }

      .badge-cancelada {
        background: rgba(231, 76, 60, 0.2);
        color: #e74c3c;
        border: 1px solid rgba(231, 76, 60, 0.5);
      }

      .badge-completada {
        background: rgba(52, 152, 219, 0.2);
        color: #3498db;
        border: 1px solid rgba(52, 152, 219, 0.5);
      }

      .actions {
        display: flex;
        gap: 0.5rem;
      }

      .btn-action {
        padding: 0.4rem 0.8rem;
        border: none;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .btn-confirm {
        background: rgba(46, 204, 113, 0.9);
        color: white;
      }

      .btn-confirm:hover {
        background: rgba(46, 204, 113, 1);
        transform: translateY(-2px);
      }

      .btn-cancel {
        background: rgba(231, 76, 60, 0.9);
        color: white;
      }

      .btn-cancel:hover {
        background: rgba(231, 76, 60, 1);
        transform: translateY(-2px);
      }

      .empty-state {
        text-align: center;
        padding: 3rem;
        background: rgba(45, 45, 45, 0.5);
        border-radius: 15px;
        border: 2px dashed rgba(243, 156, 18, 0.3);
      }

      .empty-state p {
        color: #b0b0b0;
        font-size: 1.1rem;
      }

      .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
      }

      .stat-card {
        background: rgba(45, 45, 45, 0.95);
        padding: 1.5rem;
        border-radius: 15px;
        border-left: 5px solid #f39c12;
        border: 1px solid rgba(243, 156, 18, 0.2);
      }

      .stat-card h3 {
        color: #f39c12;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .stat-card .number {
        font-size: 2.5rem;
        font-weight: bold;
        color: #ffffff;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="header-content">
        <a href="/" class="brand-link">
          <img src="/pochita-logo.png" alt="Pochita" class="logo-img-small" />
          <h1>Dashboard Recepcionista</h1>
        </a>
        <div class="header-actions">
          <span class="username">üë§ {userData.username}</span>
          <button id="btnCerrarSesion" class="btn-logout">Cerrar sesi√≥n</button>
        </div>
      </div>
    </header>

    <div class="container">
      <div class="welcome">
        <h2>Bienvenido, {userData.username} üëã</h2>
        <p>Gestiona las citas y disponibilidad de los veterinarios</p>
      </div>

      <div class="stats-grid">
        <div class="stat-card">
          <h3>Total Citas</h3>
          <div class="number">{citas.length}</div>
        </div>
        <div class="stat-card">
          <h3>Citas Pendientes</h3>
          <div class="number">
            {citas.filter((c) => c.estado === "pendiente").length}
          </div>
        </div>
        <div class="stat-card">
          <h3>Citas Confirmadas</h3>
          <div class="number">
            {citas.filter((c) => c.estado === "confirmada").length}
          </div>
        </div>
        <div class="stat-card">
          <h3>Disponibilidades</h3>
          <div class="number">{disponibilidades.length}</div>
        </div>
      </div>

      <div class="section-header">
        <h2>Citas Programadas</h2>
        <button class="btn-add" id="btnAgendarCita">+ Agendar Cita</button>
      </div>

      {citas.length === 0 ? (
        <div class="empty-state">
          <p>No hay citas registradas todav√≠a</p>
        </div>
      ) : (
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Cliente</th>
                <th>Mascota</th>
                <th>Veterinario</th>
                <th>Motivo</th>
                <th>Estado</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              {citas.map((cita) => (
                <tr>
                  <td>{cita.fecha || "N/A"}</td>
                  <td>{cita.hora || "N/A"}</td>
                  <td>{cita.cliente?.username || "N/A"}</td>
                  <td>{cita.mascota?.nombre || "N/A"}</td>
                  <td>{cita.veterinario?.username || "N/A"}</td>
                  <td>{cita.motivo || "N/A"}</td>
                  <td>
                    <span class={`badge badge-${cita.estado || "pendiente"}`}>
                      {cita.estado || "pendiente"}
                    </span>
                  </td>
                  <td>
                    <div class="actions">
                      {cita.estado === "pendiente" && (
                        <button
                          class="btn-action btn-confirm"
                          data-id={cita.documentId}
                        >
                          Confirmar
                        </button>
                      )}
                      <button
                        class="btn-action btn-cancel"
                        data-id={cita.documentId}
                      >
                        Cancelar
                      </button>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      )}
    </div>

    <script>
      document.getElementById("btnCerrarSesion")?.addEventListener("click", async () => {
        try {
          const response = await fetch("/api/logout", {
            method: "POST",
          });

          if (response.ok) {
            window.location.href = "/login";
          }
        } catch (error) {
          console.error("Error al cerrar sesi√≥n:", error);
          alert("Error al cerrar sesi√≥n");
        }
      });

      // Confirmar cita
      document.querySelectorAll(".btn-confirm").forEach((btn) => {
        btn.addEventListener("click", async (e) => {
          const citaId = e.target.getAttribute("data-id");
          if (!citaId) return;

          try {
            const response = await fetch(`http://localhost:1337/api/citas/${citaId}`, {
              method: "PUT",
              headers: {
                "Content-Type": "application/json",
                Authorization: `Bearer ${document.cookie.split("jwt=")[1]?.split(";")[0]}`,
              },
              body: JSON.stringify({
                data: { estado: "confirmada" },
              }),
            });

            if (response.ok) {
              alert("Cita confirmada exitosamente");
              window.location.reload();
            } else {
              alert("Error al confirmar la cita");
            }
          } catch (error) {
            console.error("Error:", error);
            alert("Error al confirmar la cita");
          }
        });
      });

      // Cancelar cita
      document.querySelectorAll(".btn-cancel").forEach((btn) => {
        btn.addEventListener("click", async (e) => {
          const citaId = e.target.getAttribute("data-id");
          if (!citaId) return;

          if (!confirm("¬øEst√°s seguro de cancelar esta cita?")) return;

          try {
            const response = await fetch(`http://localhost:1337/api/citas/${citaId}`, {
              method: "PUT",
              headers: {
                "Content-Type": "application/json",
                Authorization: `Bearer ${document.cookie.split("jwt=")[1]?.split(";")[0]}`,
              },
              body: JSON.stringify({
                data: { estado: "cancelada" },
              }),
            });

            if (response.ok) {
              alert("Cita cancelada exitosamente");
              window.location.reload();
            } else {
              alert("Error al cancelar la cita");
            }
          } catch (error) {
            console.error("Error:", error);
            alert("Error al cancelar la cita");
          }
        });
      });

      // Agendar cita (placeholder)
      document.getElementById("btnAgendarCita")?.addEventListener("click", () => {
        alert("Funcionalidad de agendar cita pr√≥ximamente");
      });
    </script>
  </body>
</html>
