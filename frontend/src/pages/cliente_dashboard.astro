      }

      .welcome {
        background: rgba(45, 45, 45, 0.95);
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        border: 1px solid rgba(243, 156, 18, 0.2);
      }

      .welcome h2 {
        color: #f39c12;
        margin-bottom: 0.5rem;
      }

      .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
      }

      .section-header h2 {
        color: #f39c12;
        font-size: 1.5rem;
      }

      .btn-add {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
        color: white;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 1rem;
      }

      .btn-add:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(243, 156, 18, 0.4);
      }

      .pets-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
      }

      .pet-card {
        background: rgba(45, 45, 45, 0.95);
        padding: 1.5rem;
        border-radius: 15px;
        border-left: 5px solid #f39c12;
        transition: all 0.3s ease;
        border: 1px solid rgba(243, 156, 18, 0.2);
      }

      .pet-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(243, 156, 18, 0.2);
      }

      .pet-card h3 {
        color: #ffffff;
        margin-bottom: 1rem;
        font-size: 1.3rem;
      }

      .pet-info {
        color: #b0b0b0;
        margin-bottom: 0.5rem;
      }

      .pet-info strong {
        color: #f39c12;
      }

      .pet-notes {
        margin-top: 1rem;
        padding: 1rem;
        background: rgba(30, 30, 30, 0.5);
        border-radius: 8px;
        color: #d0d0d0;
        font-style: italic;
      }

      .pet-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
      }

      .btn-edit,
      .btn-delete {
        flex: 1;
        padding: 0.6rem;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .btn-edit {
        background: rgba(52, 152, 219, 0.9);
        color: white;
      }

      .btn-edit:hover {
        background: rgba(52, 152, 219, 1);
        transform: translateY(-2px);
      }

      .btn-delete {
        background: rgba(231, 76, 60, 0.9);
        color: white;
      }

      .btn-delete:hover {
        background: rgba(231, 76, 60, 1);
        transform: translateY(-2px);
      }

      .empty-state {
        text-align: center;
        padding: 3rem;
        background: rgba(45, 45, 45, 0.5);
        border-radius: 15px;
        border: 2px dashed rgba(243, 156, 18, 0.3);
      }

      .empty-state p {
        color: #b0b0b0;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="header-content">
        <a href="/" class="brand-link">
          <img src="/pochita-logo.png" alt="Pochita" class="logo-img-small" />
          <h1>Veterinaria Pochita</h1>
        </a>
        <div class="header-actions">
          <span class="username">üë§ {userData.username}</span>
          <button id="btnCerrarSesion" class="btn-logout">Cerrar sesi√≥n</button>
        </div>
      </div>
    </header>

    <div class="container">
      <div class="welcome">
        <h2>Bienvenido, {userData.username} üëã</h2>
        <p>Gestiona las mascotas de tu familia</p>
      </div>

      <div class="section-header">
        <h2>Mis Mascotas</h2>
        <button class="btn-add" id="btnAgregarMascota">+ Agregar Mascota</button>
      </div>

      {
        mascotas.length === 0 ? (
          <div class="empty-state">
            <p>No tienes mascotas registradas todav√≠a</p>
            <button class="btn-add" id="btnAgregarMascota2">
              + Agregar tu primera mascota
            </button>
          </div>
        ) : (
          <div class="pets-grid">
            {mascotas.map((mascota) => (
              <div class="pet-card">
                <h3>{mascota.nombre}</h3>
                <div class="pet-info">
                  <strong>Especie:</strong> {mascota.especie || "No especificado"}
                </div>
                <div class="pet-info">
                  <strong>Raza:</strong> {mascota.raza || "No especificado"}
                </div>
                <div class="pet-info">
                  <strong>Edad:</strong> {mascota.edad ? `${mascota.edad} a√±os` : "No especificado"}
                </div>
                {mascota.notas && (
                  <div class="pet-notes">
                    <strong>Notas:</strong> {mascota.notas}
                  </div>
                )}
                <div class="pet-actions">
                  <button class="btn-edit" data-id={mascota.documentId}>
                    Editar
                  </button>
                  <button class="btn-delete" data-id={mascota.documentId}>
                    Eliminar
                  </button>
                </div>
              </div>
            ))}
          </div>
        )
      }
    </div>

    <script>
      // Cerrar sesi√≥n
      document.getElementById('btnCerrarSesion')?.addEventListener('click', async () => {
        try {
          const response = await fetch('/api/logout', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
          });

          if (response.ok) {
            console.log('‚úÖ Sesi√≥n cerrada exitosamente');
            window.location.href = '/login';
          } else {
            console.error('‚ùå Error al cerrar sesi√≥n');
            alert('Error al cerrar sesi√≥n');
          }
        } catch (error) {
          console.error('üí• Error:', error);
          alert('Error al cerrar sesi√≥n');
        }
      });

      // Agregar mascota (placeholder - implementar modal despu√©s)
      document.getElementById('btnAgregarMascota')?.addEventListener('click', () => {
        alert('Funcionalidad de agregar mascota - Implementar modal');
      });

      document.getElementById('btnAgregarMascota2')?.addEventListener('click', () => {
        alert('Funcionalidad de agregar mascota - Implementar modal');
      });

      // Editar mascota
      document.querySelectorAll('.btn-edit').forEach((btn) => {
        btn.addEventListener('click', (e) => {
          const id = e.target.dataset.id;
          alert(`Editar mascota con ID: ${id} - Implementar modal`);
        });
      });

      // Eliminar mascota
      document.querySelectorAll('.btn-delete').forEach((btn) => {
        btn.addEventListener('click', async (e) => {
          const id = e.target.dataset.id;
          
          if (confirm('¬øEst√°s seguro de eliminar esta mascota?')) {
            try {
              const response = await fetch(`/api/pets/delete`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ documentId: id }),
              });

              if (response.ok) {
                alert('Mascota eliminada exitosamente');
                window.location.reload();
              } else {
                alert('Error al eliminar la mascota');
              }
            } catch (error) {
              console.error('Error:', error);
              alert('Error al eliminar la mascota');
            }
          }
        });
      });
    </script>
