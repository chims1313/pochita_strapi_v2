        align-items: center;
        gap: 0.6rem;
        text-decoration: none;
        color: inherit;
      }

      .logo-img-small {
        height: 1.8rem;
        width: auto;
        display: block;
      }

      .header-actions {
        display: flex;
        align-items: center;
        gap: 1.5rem;
      }

      .username {
        color: #d0d0d0;
        font-weight: 500;
        font-size: 1rem;
      }

      .btn-logout {
        background: rgba(231, 76, 60, 0.9);
        color: white;
        border: none;
        padding: 0.7rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.95rem;
      }

      .btn-logout:hover {
        background: rgba(231, 76, 60, 1);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(231, 76, 60, 0.4);
      }

      .container {
        max-width: 1200px;
        margin: 2rem auto;
